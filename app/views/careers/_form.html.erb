<%= form_for @career do |f| %>
  <% if @career.errors.any? %>
    <div class="errors">
      <ul>
        <% @career.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <th><%= f.label :last_name %></th>
      <td><%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <th><%= f.label :first_name %></th>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th><%= f.label :birthday %></th>
      <td><%= f.text_field :birthday %></td>
    </tr>
    <tr>
      <th><%= f.label :gender %></th>
      <td>
        <label><%= f.radio_button :gender, 'M' %> 男性</label>
        <label><%= f.radio_button :gender, 'F' %> 女性</label>
    </tr>
    <tr>
      <th><%= f.label :introduction %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
